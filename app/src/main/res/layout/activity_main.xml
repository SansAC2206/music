<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addSongButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Добавить песню"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Поиск песен"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/addSongButton"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray"/>

    <Button
        android:id="@+id/playlistsButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Мои плейлисты"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/searchButton"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray"/>

    <ListView
        android:id="@+id/songList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addSongButton"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>