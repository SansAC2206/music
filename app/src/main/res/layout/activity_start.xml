<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <TextView
        android:id="@+id/textViewAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавляйте свою музыку. \nСоздавайте свои плейлисты."
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:layout_marginTop="180dp"
        />
    <ImageView
        android:id="@+id/MainImage"
        android:layout_width="259dp"
        android:layout_height="200dp"
        android:src="@drawable/player"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdd" />
    <Button
        android:id="@+id/btnAuth"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:onClick="RegBtnMain_Click"
        app:layout_constraintTop_toBottomOf="@id/MainImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        android:backgroundTint="#00693E"
        />
    <Button
        android:id="@+id/regBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Авторизация"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:onClick="MainAuthBtn_Click"
        app:layout_constraintTop_toBottomOf="@id/btnAuth"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/transparent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>